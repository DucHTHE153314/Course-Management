@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<hr />
<div class="form-ui row">
    <div class="col-md-6">
    <h2>@ViewData["Title"]</h2>
    <h4>Enter your email.</h4>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger">
                    @ViewData["msg"]
                </span>
            </div>
            <button type="submit" class="button cta btn btn-default">Submit</button>
        </form>
    </div>
    <div class="col-md-6 has-img" style="background-image:url(https://i.pinimg.com/564x/93/64/ae/9364ae370f7b3886669313eec8380797.jpg);">
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}